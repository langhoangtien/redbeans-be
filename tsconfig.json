{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", // Đảm bảo sử dụng CommonJS
    "moduleResolution": "node",
    "esModuleInterop": true, // Cho phép sử dụng kiểu ESModule như CommonJS
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, // Bật strict mode, cần khai báo kiểu cho các biến
    "skipLibCheck": true,
    "baseUrl": "./src", // Thiết lập baseUrl là thư mục src
    "paths": {
      "@/*": ["*"] // Alias @ sẽ trỏ tới thư mục src
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
